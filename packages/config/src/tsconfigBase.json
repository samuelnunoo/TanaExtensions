{
 
    "compilerOptions": {
        "target": "es2017",
        "module": "es2022",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "lib": [ "es2017","dom"],
        "moduleResolution": "node",
        "sourceMap": true,
        "strictNullChecks": true,
        "types": ["@types/sinon"],
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": false,

        "jsx": "react",
        "outDir": "build"
    },
    "exclude": [
        "node_modules"
      ]
}
